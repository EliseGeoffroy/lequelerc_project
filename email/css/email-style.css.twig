@import url("general-styles.css");

h1 {
    color:#00b4d8;
}

body {
    border: 20px solid #219ebc;
    text-align: center;
}

.button {
    text-align:center;
    align-items:center;

    border:1px solid #219ebc;
    box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;
    border-radius:8px;
    background-color:#219ebc;
    color:white;
    width:10rem;
    padding:0.5% 2%;
  
    cursor:pointer;
}   

a {
    text-decoration: none;
    color:inherit;
}